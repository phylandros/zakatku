<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8111"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="DAFTAR AKUN"
            android:textColor="#FFFFFFFF"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/namasignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/emailsignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/notelsignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Nomor Telpon"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />


        <EditText
            android:id="@+id/usernamesignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="#FFFBF5"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/passwordsignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="#FFFBF5"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/conpasswordsignup"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inp_tamplate"
            android:hint="Konfirm Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="#FFFBF5"
            android:textColorHint="#FFFBF5"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_signup"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:background="@drawable/btncolor"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="#FFFBF5"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btncolorback"
                android:onClick="goToLoginPage"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbarsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </LinearLayout>
</LinearLayout>
